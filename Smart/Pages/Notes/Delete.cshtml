@page
@model Smart.Pages.Notes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Note</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note.Student)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note.Student.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note.NoteType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note.NoteType.NoteTypeId)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Note.NoteId" />
        <div class="row">
            <div class="col-6">
                <input type="submit" value="Delete" class="btn btn-danger" asp-route-id="@Model.Note.NoteId" asp-route-studentId="@Model.studentIdentification" />
            </div>
            <div class="col-6">
                <a asp-page="Index" class="btn btn-success" asp-route-studentId="@Model.studentIdentification">Back to List</a>
            </div>
        </div>
    </form>
</div>
