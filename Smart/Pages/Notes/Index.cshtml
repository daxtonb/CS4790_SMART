@page
@model Smart.Pages.Notes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Notes</h1>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="~/Students">Student</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Grades</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="Files">Files</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Attendance</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/Notes">Notes<span class="sr-only">(current)</span></a>
            </li>
        </ul>
    </div>
</nav>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Note[0].Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note[0].Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note[0].User)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Note)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.NoteId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.NoteId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.NoteId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-page="Create" class="btn btn-info"><i class="fas fa-plus"></i> &nbsp;  Create New Student </a>