@page
@model Smart.Pages.Notes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Note.NoteId" />
            <div class="form-group">
                <label asp-for="Note.Studentid" class="control-label"></label>
                <select asp-for="Note.Studentid" class="form-control" asp-items="ViewBag.Studentid"></select>
                <span asp-validation-for="Note.Studentid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.UserId" class="control-label"></label>
                <select asp-for="Note.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Note.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.NoteTypeId" class="control-label"></label>
                <select asp-for="Note.NoteTypeId" class="form-control" asp-items="ViewBag.NoteTypeId"></select>
                <span asp-validation-for="Note.NoteTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.Text" class="control-label"></label>
                <input asp-for="Note.Text" class="form-control" />
                <span asp-validation-for="Note.Text" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-6">
                    <input type="submit" value="Save" class="btn btn-info form-control" asp-route-id="@Model.Note.NoteId" asp-route-studentId="@Model.studentIdentification" />
                </div>
                <div class="col-6">
                    <a asp-page="Index" class="btn btn-success form-control" asp-route-studentId="@Model.studentIdentification">Back to List</a>
                </div>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
