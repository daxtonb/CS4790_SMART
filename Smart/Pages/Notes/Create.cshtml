@page
@model Smart.Pages.Notes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Note.Studentid" class="control-label"></label>
                <select asp-for="Note.Studentid" class="form-control" asp-items="ViewBag.Studentid"></select>
            </div>
            <div class="form-group">
                <label asp-for="Note.UserId" class="control-label"></label>
                <select asp-for="Note.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Note Type</label>
                <select asp-for="Note.NoteType.Description" class="form-control" asp-items="ViewBag.NoteTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Note.Title" class="control-label"></label>
                <input asp-for="Note.Title" class="form-control" />
                <span asp-validation-for="Note.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.Text" class="control-label"></label>
                <input asp-for="Note.Text" class="form-control" />
                <span asp-validation-for="Note.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.CreateDate" class="control-label"></label>
                <input asp-for="Note.CreateDate" class="form-control" />
                <span asp-validation-for="Note.CreateDate" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-6">
                    <input type="submit" class="btn btn-info form-control" value="Create" asp-route-studentId="@Model.studentIdentification" />
                </div>
                <div class="col-6">
                    <a asp-page="Index" class="btn btn-success form-control" asp-route-studentId="@Model.studentIdentification">Back to List</a>
                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
