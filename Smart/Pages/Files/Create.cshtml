@page
@model Smart.Pages.Files.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>File</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Student</label>
                <select asp-for="File.StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">File Type</label>
                <select asp-for="File.FileTypeId" class="form-control" asp-items="ViewBag.FileTypeId"></select>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="File.ByteData" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input type="file" id="filedocument" name="files" multiple class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <input type="submit" class="btn btn-info form-control" value="Create" asp-route-studentId="@Model.studentIdentification" />
                </div>
                <div class="col-6">
                    <a asp-page="Index" class="btn btn-success form-control" asp-route-studentId="@Model.studentIdentification">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

