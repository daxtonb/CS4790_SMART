@{ 
    Layout = "~/Pages/Shared/_Layout.cshtml";
    string url = Url.ToString();
}
<div class="card">
    <div class="card-body">
        <h2 class="card-title">@ViewData["ClassTitle"]</h2>
        <h5 class="card-subtitle mb-4 text-muted">@ViewData["ClassSubtitle"]</h5>
        <div class="row">
            <div class="col-3">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" href="/Classes/@ViewData["ClassId"]/Students" aria-selected="@url.EndsWith("Students", StringComparison.OrdinalIgnoreCase)">Students</a>
                    <a class="nav-link" href="/Classes/@ViewData["ClassId"]/Attendance" id="attendance-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="@url.EndsWith("Attendance", StringComparison.OrdinalIgnoreCase)">Attendance</a>
                    <a class="nav-link" hreflang="href="/Classes/@ViewData["ClassId"]/Assessments"" id="assessments-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="@url.EndsWith("Assessments", StringComparison.OrdinalIgnoreCase)">Assessments</a>
                </div>
            </div>
            <div class="col-9">
                <div class="tab-content" id="v-pills-tabContent">
                    @RenderBody()
                    @*<div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="students-tab">
                        <partial name="_StudentsTab" model="Model.StudentTabVM" />
                    </div>
                    <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="attendance-tab">...</div>
                    <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="assessments-tab">...</div>*@
                </div>
            </div>
        </div>
    </div>
</div>