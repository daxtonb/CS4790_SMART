    </div>
</div>


<div class="row" style="padding-bottom: 10px">
    <a class="btn btn-primary" data-toggle="collapse" href="#PotentialClassesAccordion" role="button" aria-expanded="false" aria-controls="PotentialClassesAccordion">Potential Classes</a>
</div>
<div class="row col-12">
    <div class="collapse col-12" id="PotentialClassesAccordion">
        <table class="table table-striped table-hover col-md-12">
            <thead>
                <tr>
                    <th>Class Id</th>
                    <th>Class</th>
                    <th>Instructor</th>
                    <th>Schedule</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var classOption in Model.Classes)
                {
                    <tr>
                        <td>@classOption.ClassId</td>
                        <td>@classOption.Course.Name</td>
                        <td>@(@classOption.InstructorUser.FirstName) @(classOption.InstructorUser.LastName)</td>
                        <td>@ClassSchedule.GetScheduleString(classOption.ClassSchedules)</td>
                        <td style="width: 150px">
                            <form method="post">
                                <div class="form-group">
                                    <button type="submit" asp-route-id="@classOption.ClassId" asp-route-studentId="@Model.MyStudent.StudentId" class="btn btn-primary fas fa-plus"> Register</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="DeleteModal" tabIndex="-1" role="dialog" aria-labelledby="DeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Class</h4>
            </div>
            <div class="modal-body">
                <p>
                    Are you sure you'd like to remove the student from
                    this class? <br>This action can't be undone.
                </p>
                <form class="form-group" asp-page="Index" method="post">
                    <input type="hidden" id="SelectedClass" />
                    <button type="submit" class="btn btn-primary">Delete</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </form>

            </div>

        </div>
    </div>

</div>
