@model Smart.Pages.Scheduling.IndexModel
@{
    ViewData["Title"] = "Index";

    //Sunday is 0
    int currentDayOfWeek = (int)DateTime.Now.DayOfWeek - 1;
}
<script type="text/javascript">
    console.log(@currentDayOfWeek)
</script>

<div class="row">
    <div class="col-6">
        <h2>Schedule</h2>
        <h2>@Model.MyStudent.FirstName @Model.MyStudent.LastName</h2>
        
    </div>
    <div class="col-6 text-right">
        <a asp-page="PublicSchedule" asp-route-studentId="@Model.MyStudent.StudentId" class="btn btn-primary">Add Public School Schedule</a>
    </div>
</div>


<div class="row" style="padding-top: 10px;">
    <div class="alert alert-primary col-12 text-center" role="alert"><h2>Enrolled Courses</h2></div>
    <div class="col-12">
        <table class="table table-striped border col-md-12">
            <thead>
                <tr>
                    <th>Class</th>
                    <th>Instructor</th>
                    <th>Schedule</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.MyClasses.Count == 0)
                {
                    <tr>
                        <td colspan="4"><h4 class="text-danger">Not Currently enrolled in any courses this term</h4></td>
                    </tr>
                }
                @foreach (var course in Model.MyClasses)
                {
                    <tr>
                        <td>@course.Class.Course.Name</td>
                        <td>@(@course.Class.InstructorUser.FirstName) @(@course.Class.InstructorUser.LastName)</td>
                        <td>@ClassSchedule.GetScheduleString(course.Class.ClassSchedules)</td>
                        <td>INSERT DELETE OPERATION HERE</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row" style="padding-top: 10px">
    <div class="alert alert-info col-12 text-center"><h2>Public School Schedule</h2></div>
    <div class="col-12">
        <table class="table table-striped border col-md-12">
            <thead>
                <tr>
                    <th>Class</th>
                    <th>Days</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.PublicSchedule.Count == 0)
                {
                    <tr>
                        <td colspan="5"><h4 class="text-danger">No Public Classes Added Yet</h4></td>
                    </tr>
                }
                else
                {
                    @foreach (var schoolClass in Model.MyPublicSchoolSchedule)
                    {
                        <tr>
                            <td>@schoolClass.CourseName</td>
                            <td>@schoolClass.DaysOfTheWeek</td>
                            <td>@schoolClass.StartTime</td>
                            <td>@schoolClass.EndTime</td>
                            <td>INSERT OPERATIONS HERE</td>
                        </tr>

                    }
                }
            </tbody>
        </table>
    </div>
</div>
