@page
@model Smart.Pages.RatingCriterium.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table table-striped border col-md-12" id="ratingCriteriumTable">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RatingCirterium[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RatingCirterium[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RatingCirterium[0].MaxScore)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RatingCirterium)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxScore)
            </td>

            @*Button Group*@
            <td style="width:150px">
                <div class="btn-group" role="group">
                    <a class="btn btn-primary text-white" asp-page="Edit" asp-route-id="@item.RatingCirteriumId">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="btn btn-success text-white" asp-page="Details" asp-route-Id="@item.RatingCirteriumId">
                        <i class="fas fa-list-alt"></i>
                    </a>
                    <a class="btn btn-danger text-white" asp-page="Delete" asp-route-Id="@item.RatingCirteriumId">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </div>
            </td>

        </tr>
        }
    </tbody>
</table>

<a asp-page="Create" class="btn btn-info"><i class="fas fa-plus"></i> &nbsp;  Create New Criteria </a>