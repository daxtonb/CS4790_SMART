@page
@model Smart.Pages.RatingCriterium.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create Rating Criteria</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RatingCirterium.Title" class="control-label"></label>
                <input asp-for="RatingCirterium.Title" class="form-control" />
                <span asp-validation-for="RatingCirterium.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RatingCirterium.Description" class="control-label"></label>
                @Html.TextAreaFor(model => model.RatingCirterium.Description, 10, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
            </div>

            @*<div class="form-group">
                <label asp-for="RatingCirterium.Description" class="control-label"></label>
                <input asp-for="RatingCirterium.Description" class="form-control" />
                <span asp-validation-for="RatingCirterium.Description" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <label asp-for="RatingCirterium.MaxScore" class="control-label"></label>
                <input asp-for="RatingCirterium.MaxScore" class="form-control" />
                <span asp-validation-for="RatingCirterium.MaxScore" class="text-danger"></span>
            </div>
            <div class="form-group row ">
                <div class="col-12">
                    <partial name="_CreateButtons" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}