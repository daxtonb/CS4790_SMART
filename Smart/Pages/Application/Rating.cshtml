@page
@model Smart.Pages.Application.RatingModel

@{
    ViewData["Title"] = "Ratings";
}

    <div>
        <h4>Student Rating</h4>

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.LastName)
            </dd>
        </dl>

        <form method="post">
        
            @foreach (var item in Model.RatingCirterium)
            {
                <div>
                    @item.Description
                    <input type="text" name="inputValues" class="control-label" />
                    / @item.MaxScore
                </div>
            }
                
            <div>
                Comments:
                <input type="text" name="comment" class="control-label" />
            </div>
            
            <div class="form-group row ">
                <div class="col-2">
                    <partial name="_EditButtons"></partial>
                </div>
            </div>
        </form>

    </div>